

<h1>Books</h1>

<% @books.each do |book| %>
  <p>title</p>
      <%= book.title %>
　<p>body</p>
    　<%= book.body %>
      <%= link_to "show", book_path(book) %>
      <%= link_to "edit", book_path(book) %>
      <%= link_to "destroy", book_path(book), method: :delete, data: {confirm: "Are you sure？", turbo_confirm: "confirm"} %>
  
<% end %>


  



</div>

<div class ="New book">
<h2>New Book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
    
    <h5>title</h5>
    <%= f.text_field :title %>
    <h5>body</h5>
    <%= f.text_area :body %>
    
    <%= f.submit 'Create Book' %>
    
   
    
<% end %>

</div>