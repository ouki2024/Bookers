

<h1>Books</h1>

<table>
  
<% @books.each do |book| %>
  
  <thead>
    <tr align = "center">
      <th>title</th>
      <th>body</th>
    </tr>
  </thead>  
  
  
  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
　 

      <td><%= link_to "show", book_path(book) %></td>
      <td><%= link_to "edit", book_path(book) %></td>
      <td><%= link_to "destroy", book_path(book), method: :delete, data: {confirm: "Are you sure？", turbo_confirm: "confirm"} %></td>
    </tr>
  
  
  </tbody>
<% end %>
  
</table>



</div>

<div class ="New book">
<h2>New Book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<% if flash[:notice].present? %>
  <p><%= flash[:notice] %></p>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
    
    <h5>title</h5>
    <%= f.text_field :title %>
    <h5>body</h5>
    <%= f.text_area :body %>
    
    <%= f.submit 'Create Book' %>
    
   
    
<% end %>

</div>